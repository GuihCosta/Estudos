Algoritmo "Exercicio_15"

Var
      DiasT:Inteiro
      ValD,Salario:Real

Inicio
    Escreva("Informe o total de dias trabalhados: ")
    Leia (DiasT)
    ValD<- 8*25.0
    Salario<- ValD*DiasT
    Escreva ("O salario desse funcionario é de R$",Salario:8:2, " Por", DiasT, " Dias Trabalhados")
Fimalgoritmo