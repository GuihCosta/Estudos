Algoritmo "Aula_07_Condicional_Simples"


Var
   Ano,Nasc,Idade:Inteiro
Inicio
    Escreva ("Informe O Ano Atual: ")
    Leia (Ano)
    Escreva ("Informe Ano Em que nasceu: ")
    Leia (Nasc)
    Idade <- Ano-Nasc

    Escreval("Em", ano, " você terá", Idade, "anos")
    se (Idade>=20) entao
    Escreva("Você já está ma maioridade!")
    FimSe
Fimalgoritmo